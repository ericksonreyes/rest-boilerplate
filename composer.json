{
  "name": "ericksonreyes/rest-api",
  "description": "Rest Sales API",
  "license": "Propriety",
  "type": "project",
  "require": {
    "php": ">=7.2",
    "ext-json": "*",
    "behat/behat": "^3.5",
    "brainmaestro/composer-git-hooks": "^2.6",
    "elasticsearch/elasticsearch": "^6.0",
    "firebase/php-jwt": "^5.0",
    "fzaninotto/faker": "~1.4",
    "illuminate/mail": "^5.7",
    "incenteev/composer-parameter-handler": "~2.0",
    "jms/serializer": "^1.13",
    "laravel/lumen-framework": "5.7.*",
    "mongodb/mongodb": "^1.4",
    "nordsoftware/lumen-cors": "^2.2",
    "pagerfanta/pagerfanta": "^2.0",
    "php-amqplib/php-amqplib": "^2.7",
    "ramsey/uuid": "^3.8",
    "spatie/array-to-xml": "^2.7",
    "symfony/config": "^4.1",
    "symfony/dependency-injection": "^4.1",
    "vlucas/phpdotenv": "~2.2"
  },
  "require-dev": {
    "leanphp/phpspec-code-coverage": "^4.2",
    "mockery/mockery": "~1.0",
    "phing/phing": "^2.16",
    "php-coveralls/php-coveralls": "^2.1",
    "phpmd/phpmd": "^2.6",
    "phpspec/phpspec": "^4.0",
    "phpunit/phpunit": "~7.0",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.1",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/",
      "Rest\\": "src/Rest"
    },
    "psr-0": {
      "": [
        "src"
      ]
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ],
    "psr-4": {
      "spec\\": "spec/"
    }
  },
  "scripts": {
    "cghooks": "bin/cghooks",
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-install-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "cghooks add --ignore-lock"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
      "cghooks update"
    ]
  },
  "extra": {
    "incenteev-parameters": {
      "file": "config/parameters.yml",
      "dist-file": "config/parameters.yml.dist"
    },
    "hooks": {
      "pre-commit": [
        "echo comitting as $(git config user.name)",
        "./scripts/lint"
      ],
      "post-merge": [
        "echo 'post-merge started'",
        "./scripts/post-merge",
        "echo 'post-merge finished';"
      ]
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
